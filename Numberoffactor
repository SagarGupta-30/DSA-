#include <iostream>
using namespace std;

class Solution {
public:
    int countFactors(int n) {
        int count = 0;

        for (int i = 1; i * i <= n; i++) {
            if (n % i == 0) {
                if (i == n / i)
                    count += 1;   
                else
                    count += 2;   
            }
        }

        return count;
    }
};

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    Solution obj;
    int result = obj.countFactors(n);

    cout << "Total number of factors: " << result << endl;

    return 0;
}
